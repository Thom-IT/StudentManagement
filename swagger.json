{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "Course Managment System",
        "description": "this is the course Managment System created by Group 2(Rauf , Theonest , Innocent and Thomas). The system contains the below APIs",
        "license": {
            "name": "MT",
            "url": "https://github.com/Nosenti/CoursesManager.git"
        }
    },
    "servers": [{
            "url": "/",
            "description": "Local Dev, or from Heroku"
        },
        {
            "url": "/api/",
            "description": "With docker-compose and nginx proxy, secured"
        }
    ],
    "tags": [{
        "name": "Course Managment System",
        "description": "API for course in the system"
    }],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/api/courses": {
            "get": {
                "tags": [
                    "Admin"
                ],
                "summary": "Get all Courses in system",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/courses"
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Admin"
                ],
                "summary": "Create a new courses in system",
                "parameters": [{
                    "name": "x-auth-token",
                    "in": "header",
                    "required": true,
                    "type": "string",
                    "description": "Admin Token"
                }],
                "requestBody": {
                    "description": "courses Object",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/course"
                            }
                        }
                    }
                },
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/id"
                        }
                    },
                    "400": {
                        "description": "Failed. Bad post data."
                    }
                }
            }
        },
        "/api/courses/{id}": {
            "parameters": [{
                "name": "id",
                "in": "path",
                "required": true,
                "description": "ID of the cat that we want to match",
                "type": "string"
            }],
            "get": {
                "tags": [
                    "Admin"
                ],
                "summary": "Get course with given ID",
                "parameters": [{
                    "in": "path",
                    "name": "id",
                    "required": true,
                    "description": "course with id",
                    "schema": {
                        "$ref": "#/definitions/id"
                    }
                }],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/course"
                        }
                    },
                    "404": {
                        "description": "Failed. course not found."
                    }
                }
            }
        }
    },
    "definitions": {
        "id": {
            "properties": {
                "uuid": {
                    "type": "string"
                }
            }
        },
        "course": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "content": {
                    "type": "string"
                },
                "genre": {
                    "type": "string"
                }
            }
        },
        "courses": {
            "type": "object",
            "properties": {
                "cats": {
                    "type": "object",
                    "additionalProperties": {
                        "$ref": "#/definitions/course"
                    }
                }
            }
        }
    }
}